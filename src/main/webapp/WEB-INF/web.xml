<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Know your candidate</display-name>
     <context-param>  
        <param-name>contextConfigLocation</param-name>  
        <param-value>/WEB-INF/mvc-dispatcher-servlet.xml /WEB-INF/user-dispatcher-servlet.xml</param-value>  
    </context-param>  
  
    <listener>  
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>  
    </listener>  
    <servlet>  
        <servlet-name>mvc-dispatcher</servlet-name>  
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>  
        <load-on-startup>1</load-on-startup>  
    </servlet>  
  
    <servlet-mapping>  
        <servlet-name>mvc-dispatcher</servlet-name>  
        <url-pattern>/candidate/*</url-pattern>  
    </servlet-mapping> 
    <error-page>
	<error-code>404</error-code>
	<location>/WEB-INF/pages/404.html</location>
  </error-page>
  <error-page>
	<error-code>500</error-code>
	<location>/WEB-INF/pages/500.html</location>
  </error-page>
   
</web-app>
